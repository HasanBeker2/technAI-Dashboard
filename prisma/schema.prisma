// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  name      String?
  image     String?
  projects  Project[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Client {
  id        String    @id @default(cuid())
  name      String
  email     String?
  phone     String?
  address   String?
  projects  Project[]
  invoices  Invoice[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Project {
  id           String      @id @default(cuid())
  name         String
  description  String?
  hourlyRate   Decimal     @db.Decimal(10, 2)
  estimatedHours Decimal?  @db.Decimal(10, 2)
  status       ProjectStatus @default(ACTIVE)
  
  clientId     String
  client       Client      @relation(fields: [clientId], references: [id], onDelete: Cascade)
  
  userId       String
  user         User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  timesheets   Timesheet[]
  invoices     Invoice[]
  
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
}

enum ProjectStatus {
  ACTIVE
  COMPLETED
  ON_HOLD
  ARCHIVED
}

model Timesheet {
  id          String   @id @default(cuid())
  date        DateTime @db.Date
  hours       Decimal  @db.Decimal(5, 2)
  description String?
  
  projectId   String
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  // Billing tracking
  invoiceId   String?
  invoice     Invoice? @relation(fields: [invoiceId], references: [id], onDelete: SetNull)
  isBilled    Boolean  @default(false)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([projectId])
  @@index([date])
  @@index([isBilled])
  @@index([invoiceId])
}

model Invoice {
  id            String        @id @default(cuid())
  invoiceNumber String        @unique
  status        InvoiceStatus @default(DRAFT)
  issueDate     DateTime      @db.Date
  dueDate       DateTime      @db.Date
  
  // Invoice items stored as JSON array
  // Format: [{ description: string, quantity: number, rate: number, amount: number }]
  items         Json
  
  subtotal      Decimal       @db.Decimal(12, 2)
  vatRate       Decimal       @default(19) @db.Decimal(5, 2)
  vatAmount     Decimal       @db.Decimal(12, 2)
  total         Decimal       @db.Decimal(12, 2)
  
  notes         String?
  
  // Service period for timesheet-based invoices
  servicePeriodStart DateTime?  @db.Date
  servicePeriodEnd   DateTime?  @db.Date
  
  clientId      String
  client        Client        @relation(fields: [clientId], references: [id], onDelete: Cascade)
  
  projectId     String?
  project       Project?      @relation(fields: [projectId], references: [id], onDelete: SetNull)
  
  // Related timesheets
  timesheets    Timesheet[]
  
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  @@index([clientId])
  @@index([status])
  @@index([issueDate])
}

enum InvoiceStatus {
  DRAFT
  SENT
  PAID
  OVERDUE
  CANCELLED
}

model Expense {
  id          String       @id @default(cuid())
  category    ExpenseCategory
  description String
  amount      Decimal      @db.Decimal(12, 2)
  vatAmount   Decimal?     @db.Decimal(12, 2)
  date        DateTime     @db.Date
  receiptUrl  String?
  
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  @@index([date])
  @@index([category])
}

enum ExpenseCategory {
  SOFTWARE
  HARDWARE
  OFFICE
  TRAVEL
  MARKETING
  UTILITIES
  PROFESSIONAL_SERVICES
  OTHER
}
